---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Galería AI">
  <div class="relative min-h-screen bg-gradient-to-br from-purple-900 via-black to-indigo-900">
    <!-- Efecto de luz -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_#4f46e5_0%,_transparent_50%)] opacity-30"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_#7c3aed_0%,_transparent_50%)] opacity-20"></div>
    </div>

    <!-- Contenido principal -->
    <div class="relative z-10 min-h-screen flex items-center justify-center px-4">
      <div class="text-center">
        <h1 class="text-7xl font-bold mb-12 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 animate-title">
          Galería AI
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
          <a href="/gallery1" class="gallery-btn">
            Galería 1
          </a>
          <a href="/gallery2" class="gallery-btn">
            Galería 2
          </a>
          <a href="/gallery3" class="gallery-btn">
            Galería 3
          </a>
          <a href="/gallery4" class="gallery-btn">
            Galería 4
          </a>
          <a href="/gallery5" class="gallery-btn">
            Galería 5
          </a>
          <a href="/gallery7" class="gallery-btn">
            Galería 7
          </a>
          <a href="/gallery8" class="gallery-btn md:col-start-2">
            Galería 8
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .animate-title {
    animation: fadeIn 1.5s ease-out;
  }

  .gallery-btn {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 1rem 2rem;
    border-radius: 1rem;
    color: white;
    font-size: 1.25rem;
    transition: all 0.3s ease;
    text-align: center;
  }

  .gallery-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
